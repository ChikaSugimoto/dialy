<div class="box">

<p id="notice"><%= notice %></p>

<h1>Diary list</h1>

<table class="datebox">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>登録日時</th>
      <th>更新日時</th>
    </tr>
  </thead>

  <tbody>
    <% n = 1 
    @diaries.each do |diary| %>
      <tr>
        <td><%= link_to n, diary %>  </td>
        <td><%= link_to diary.title, diary %></td>
        <td><%= diary.created_at %></td>
        <td><%= diary.updated_at %></td>
      </tr>
      <% n += 1 %>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New', new_diary_path %>

</div>